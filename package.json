{
  "name": "mcp-box",
  "version": "1.0.0",
  "description": "MCP Box - Universal CLI for managing MCP servers across AI coding agents",
  "type": "module",
  "bin": {
    "mcp-box": "bin/cli.js",
    "mcp": "bin/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "start": "node bin/cli.js",
    "postinstall": "npm run build",
    "clean": "rm -rf dist bin",
    "prepare": "npm run build"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "zod": "^3.22.0",
    "fs-extra": "^11.2.0",
    "keytar": "^7.9.0",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.3.0",
    "fuzzy": "^0.1.3",
    "cli-table3": "^0.6.3",
    "semver": "^7.5.4",
    "globby": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/cross-spawn": "^6.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/debug": "^4.1.12",
    "@types/semver": "^7.5.6",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  },
  "keywords": [
    "mcp",
    "ai",
    "coding-agents",
    "cli",
    "developer-tools",
    "model-context-protocol",
    "claude",
    "cursor",
    "vscode",
    "gemini",
    "windsurf"
  ],
  "license": "MIT",
  "author": "MCP Box Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/nishantarnav/mcp-box.git"
  },
  "bugs": {
    "url": "https://github.com/nishantarnav/mcp-box/issues"
  },
  "homepage": "https://github.com/nishantarnav/mcp-box#readme",
  "files": [
    "bin/",
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ]
